{
    "ts-node": {
        // these options are overrides used only by ts-node
        // same as the --compilerOptions flag and the TS_NODE_COMPILER_OPTIONS environment
        "compilerOptions": {
            "module": "CommonJS",
            "target": "es6"
        }
    },
    "compilerOptions": {
        "module": "ESNext",
        "target": "es6"
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}